{
    "name": "vigihdev/wp-cli-make-command",
    "description": "A WP-CLI Make command for managing various WordPress entities (posts, pages, custom post types, taxonomies, terms, users, comments) efficiently via the command line.",
    "homepage": "https://github.com/vigihdev/wp-cli-make-command",
    "keywords": [
        "wp-cli",
        "wordpress-cli",
        "entity",
        "custom-post-type",
        "cpt",
        "taxonomy",
        "post-management",
        "wordpress-development",
        "command-line",
        "developer-tools",
        "content-management",
        "post-type",
        "term-management",
        "efficiency-tools"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://satis.id"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/filesystem": "^6.4",
        "vigihdev/serializer": "dev-main",
        "vigihdev/wp-cli-tools": "dev-main",
        "vigihdev/wp-cli-models": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev",
        "symfony/dotenv": "^6.4",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "autoload": {
        "psr-4": {
            "Vigihdev\\WpCliMake\\": "src/"
        },
        "files": [
            "make-command.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\WpCliMake\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "extra": {
        "commands": [
            "make:post",
            "make:post-import",
            "make:post-type",
            "make:post-type-import",
            "make:menu-item",
            "make:menu-item-import",
            "make:menu-item-children",
            "make:menu-item-children-import",
            "make:term",
            "make:term-import",
            "make:user",
            "make:user-import",
            "make:menu"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "watch": "nodemon dev.js",
        "update:model": "console composer:update vigihdev/wp-cli-models",
        "test:coverage": "phpunit --coverage-html coverage",
        "build": "console git:push && console satis:build && cd $HOME/.wp-cli/packages && console composer:update vigihdev/wp-cli-make-command && cd $HOME/WordpressCli/wp-cli-make-command",
        "dev": "php -S localhost:3172 dev.php"
    }
}
